{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/Builds/${presetName}",
      "cacheVariables": {
        "LEMONS_GENERATE_TRANSLATION_FILES": "OFF"
      },
      "hidden": true
    },
    {
      "name": "docs",
      "displayName": "Configure for documentation",
      "description": "Configuration with documentation enabled",
      "inherits": "base",
      "cacheVariables": {
        "LEMONS_BUILD_DOCS": "true"
      }
    },
    {
      "name": "tests",
      "displayName": "Configure for testing",
      "description": "Confuguration with testing enabled",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LEMONS_BUILD_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "docs",
      "displayName": "Build all",
      "description": "Builds everything",
      "configurePreset": "docs",
      "targets": ["Doxygen"]
    },
    {
      "name": "tests",
      "displayName": "Build tests",
      "description": "Builds the Lemons unit tests",
      "configurePreset": "tests",
      "configuration": "Debug",
      "targets": ["UnitTestRunner"]
    }
  ],
  "testPresets": [
    {
      "name": "all",
      "displayName": "Run tests",
      "description": "Runs the Lemons unit tests",
      "configurePreset": "tests",
      "configuration": "Debug",
      "output": {
        "outputLogFile": "${sourceDir}/logs/unitTests.log"
      },
      "execution": {
        "noTestsAction": "error"
      }
    }
  ]
}