{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/Builds/${presetName}",
      "warnings": {
        "deprecated": true,
        "unusedCli": false,
        "systemVars": true
      },
      "errors": {
        "deprecated": true
      },
      "debug": {
        "output": true
      }
    },
    {
      "name": "docs",
      "displayName": "Configure for documentation",
      "description": "Configuration with documentation enabled",
      "inherits": "base",
      "cacheVariables": {
        "LEMONS_BUILD_DOCS": "ON",
        "LEMONS_ENABLE_INTEGRATIONS": "OFF"
      }
    },
    {
      "name": "tests",
      "displayName": "Configure for testing",
      "description": "Confuguration with testing enabled",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LEMONS_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "editor",
      "displayName": "Configure the metadata editor",
      "inherits": "base",
      "cacheVariables": {
        "LEMONS_BUILD_METADATA_EDITOR": "ON"
    }
    },
    {
      "name": "utils",
      "displayName": "Configure for building the command line utilities",
      "inherits": "base",
      "cacheVariables": {
        "LEMONS_BUILD_UTILS": "ON"
      }
    },
    {
      "name": "templates",
      "displayName": "Configure templates build",
      "description": "Configuration with the template projects enabled",
      "inherits": "base",
      "cacheVariables": {
        "LEMONS_BUILD_TEMPLATES": "ON"
      }
    },
    {
      "name": "lab",
      "displayName": "Configure the TestLab build",
      "description": "Configuration for building TestLab",
      "inherits": "base",
      "cacheVariables": {
        "LEMONS_BUILD_TEST_LAB": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "docs",
      "displayName": "Build all",
      "description": "Builds everything",
      "configurePreset": "docs",
      "targets": ["Doxygen"]
    },
    {
      "name": "tests",
      "displayName": "Build tests",
      "description": "Builds the Lemons unit tests",
      "configurePreset": "tests",
      "configuration": "Debug",
      "targets": [ "LemonsTests" ]
    },
    {
      "name": "editor",
      "displayName": "Build the plugin metadata GUI editor",
      "configurePreset": "editor",
      "targets": [ "PluginMetadataEditor" ]
    },
    {
      "name": "utils",
      "displayName": "Build the command line utilities",
      "configurePreset": "utils",
      "targets": [ "CommandLineUtils" ]
    },
    {
      "name": "templates",
      "displayName": "Build templates",
      "description": "Builds both Lemons project templates",
      "configurePreset": "templates",
      "targets": [ "LemonsTemplates" ]
    },
    {
      "name": "lab",
      "displayName": "Build TestLab",
      "description": "Builds TestLab",
      "configurePreset": "lab",
      "targets": [ "TestLab" ]
    }
  ],
  "testPresets": [
    {
      "name": "all",
      "displayName": "Run tests",
      "description": "Runs the Lemons unit tests",
      "configurePreset": "tests",
      "configuration": "Debug",
      "output": {
        "outputLogFile": "${sourceDir}/logs/unitTests.log",
        "verbosity": "verbose"
      },
      "execution": {
        "noTestsAction": "error",
        "timeout": 1800
      },
      "filter": {
        "include": {
          "name": "Lemons."
        }
      }
    }
  ]
}